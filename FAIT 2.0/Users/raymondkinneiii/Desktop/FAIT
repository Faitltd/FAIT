import MainLayout from '../layouts/MainLayout';
import Button from '../components/ui/Button';

const AboutPage: React.FC = () => {
  return (
import React, { useEffect, useRef, useState } from 'react';
import { motion } from 'framer-motion';
import MainLayout from '../layouts/MainLayout';
import Button from '../components/ui/Button';
